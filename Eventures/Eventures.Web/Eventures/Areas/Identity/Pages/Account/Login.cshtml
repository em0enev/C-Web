@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center mt-3">Login</h1>
<hr class="w-25 mx-auto bg-eventures hr-2" />
<form asp-route-returnUrl="@Model.ReturnUrl" class="mx-auto w-25" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
    <div class="form-group">
        <div class="text-center">
            <label asp-for="Input.Username" class="font-weight-bold"></label>
        </div>
        <input asp-for="Input.Username" class="form-control" type="text" placeholder="Username..." />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <div class="text-center">
            <label asp-for="Input.Password" class="font-weight-bold"></label>
        </div>
        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password..." />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <hr class="mx-auto bg-eventures hr-2 mt-3" />
    <div class="form-group">
        <div class="checkbox d-flex justify-content-center">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" type="checkbox"> Remember me?
            </label>
        </div>
    </div>
    <hr class="mx-auto bg-eventures hr-2 mt-3" />
    <div class="justify-content-center d-flex my-3">
        <button class="bg-eventures btn" type="submit">Login</button>
    </div>
    <div id="navigation-links" class="d-flex justify-content-center">
        <div class="d-flex flex-column">
            <a href="" class="alert-link text-eventures" text-eventures">Forgot your password?</a>
            <a href="/Identity/Account/Register" class="alert-link text-eventures">Register as a new user</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
