@{
    ViewData["Title"] = "Index";
}

@if (!this.User.Identity.IsAuthenticated)
{
    <div class="jumbotron bg-eventures ">
        <h1>Eventures - The best ticket service in the world.</h1>
        <hr class="hr-2 bg-dark" />
        <h3><a href="/Identity/Account/Login">Login</a> to start "eventing".</h3>
        <h3><a href="/Identity/Account/Register">Register</a> if you don't have an account.</h3>
    </div>
}
else
{
    if (this.User.IsInRole("Admin"))
    {
        <div class="jumbotron bg-eventures text-center">
            <h1>Greetings, Administrator - @this.User.Identity.Name</h1>
            <hr class="hr-2 bg-dark" />
            <h4 class="mt-3 text-muted">Enjoy your work</h4>
        </div>
    }
    else
    {
        <div class="jumbotron bg-eventures text-center ">
            <h1>Welcome, @this.User.Identity.Name</h1>
            <hr class="hr-2  bg-dark" />
            <h4 class="mt-3 text-muted">Eventures wishes you an exciting experiance.</h4>
        </div>
    }
}
