@model List<Panda.Domain.Package>

@{
    ViewData["Title"] = "Delivered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delivered</h1>
<hr class="hr-2 bg-panda">
<div class="d-flex justify-content-between">
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="row">
                <th scope="col" class="col-lg-1 d-flex justify-content-center"><h5>#</h5></th>
                <th scope="col" class="col-lg-4 d-flex justify-content-center"><h5>Description</h5></th>
                <th scope="col" class="col-lg-1 d-flex justify-content-center"><h5>Weight</h5></th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center"><h5>Shipping Address</h5></th>
                <th scope="col" class="col-lg-2 d-flex justify-content-center"><h5>Recipient</h5></th>
                <th scope="col" class="col-lg-1 d-flex justify-content-center"><h5>Actions</h5></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                int number = i + 1;
                <tr class="row">
                    <th scope="row" class="col-lg-1 d-flex justify-content-center"><h5>@number</h5></th>
                    <td class="col-lg-4 d-flex justify-content-center"><h5>@Model[i].Description</h5></td>
                    <td class="col-lg-1 d-flex justify-content-center"><h5>@Model[i].Weight KG</h5></td>
                    <td class="col-lg-3 d-flex justify-content-center"><h5>@Model[i].ShippingAddress</h5></td>
                    <td class="col-lg-2 d-flex justify-content-center"><h5>@Model[i].Recipient</h5></td>
                    <td class="col-lg-1 d-flex justify-content-center">
                        <a href="/Package/Details/@Model[i].Id" class="btn bg-panda text-white">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>